<?import javafx.scene.layout.VBox?>

<AnchorPane stylesheets="@style.css" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.doccuty.radarplus.view.controller.TrainingController">
   <children>
      <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
         <children>
            <Label lineSpacing="2.0" maxWidth="1.7976931348623157E308" text="%training.introduction" wrapText="true">
               <VBox.margin>
                  <Insets bottom="30.0" top="20.0" />
               </VBox.margin>
            </Label>
            <GridPane hgap="10.0" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="200.0" minWidth="400.0" VBox.vgrow="ALWAYS">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
               	 <Button fx:id="btn_right" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onMouseClicked="#clickedLeft" styleClass="training-button" stylesheets="@style.css">
                     <graphic>
                     		<VBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
         	                           <ImageView fx:id="iv_leftItem" fitHeight="150.0" fitWidth="300.0" pickOnBounds="true" preserveRatio="true">
         	                              <image>
         	                                 <Image url="@../startbucks.jpg" />
         	                              </image>
         	                           </ImageView>
                           <Label fx:id="lbl_left" text="Item1">
                              <VBox.margin>
                                 <Insets top="5.0" />
                              </VBox.margin>
                           </Label>
                           <Label fx:id="text_descriptionLeft" alignment="CENTER" lineSpacing="2.0" maxWidth="300.0" text="Label" wrapText="true" VBox.vgrow="ALWAYS">
                              <VBox.margin>
                                 <Insets top="10.0" />
                              </VBox.margin>
                           </Label>
                        	</VBox>
                     </graphic>
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </Button>
               	 <Button fx:id="btn_left" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onMouseClicked="#clickedRight" styleClass="training-button" stylesheets="@style.css" GridPane.columnIndex="1">
                     <graphic>
                     		<VBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
                  	                           <ImageView fx:id="iv_rightItem" fitHeight="150.0" fitWidth="300.0" pickOnBounds="true" preserveRatio="true">
                  	                              <image>
                  	                                 <Image url="@../bier.jpg" />
                  	                              </image>
                  	                           </ImageView>
                           <Label fx:id="lbl_right" text="Item 2">
                              <VBox.margin>
                                 <Insets top="5.0" />
                              </VBox.margin>
                           </Label>
                           <Label fx:id="text_descriptionRight" alignment="CENTER" lineSpacing="2.0" maxWidth="300.0" text="Label" wrapText="true">
                              <VBox.margin>
                                 <Insets top="10.0" />
                              </VBox.margin>
                           </Label>
                        	</VBox>
                     </graphic>
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </Button>
               </children>
            </GridPane>
         </children>
      </VBox>
   </children>
